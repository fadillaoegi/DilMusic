<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bgds2"
    tools:context=".list_master">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="List Action"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/listusers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List users"/>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/Updateusers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update users"/>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/deleteusers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete users"/>

</LinearLayout>